<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.truemind.pensionnleisure.LoginActivity"
    android:orientation="vertical"
    android:background="@mipmap/login_back"
    android:weightSum="1">

    <Space
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="0.718"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:weightSum="1">

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.38"/>

        <EditText
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:inputType="text"
            android:ems="12"
            android:textSize="6pt"
            android:id="@+id/editText1"
            android:layout_gravity="bottom"
            android:gravity="center|center"
            android:layout_weight="0.422"
            android:hint="Name"/>

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.198"/>

    </LinearLayout>

    <Space
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="0.0155"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:weightSum="1">

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.38"/>

        <EditText
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:textSize="6pt"
            android:id="@+id/editText2"
            android:layout_gravity="bottom"
            android:gravity="center|center"
            android:layout_weight="0.422"
            android:hint="Without '-'"/>

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.198"/>

    </LinearLayout>

    <Space
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="0.022"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0475"
        android:weightSum="1">

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.1925"/>

        <ImageButton
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.615"
            android:id="@+id/login_btn"
            android:background="@drawable/login_btn" />

        <Space
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.1925"/>

    </LinearLayout>

    <Space
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="0.057"/>

</LinearLayout>
